<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/dataBox"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:columnCount="3">
            <Button
                android:id="@+id/btn_forward"
                style="@style/moveControlButtonStyle"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/baseline_arrow_upward_24"
                android:layout_height="65dp"
                android:textSize="17sp"
                android:text="전진"/>
            <Button
                android:id="@+id/btn_leftward"
                style="@style/moveControlButtonStyle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/baseline_arrow_back_24"
                android:layout_height="65dp"
                android:textSize="17sp"
                android:text="좌회전"/>
            <Button
                android:id="@+id/btn_rightward"
                style="@style/moveControlButtonStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/baseline_arrow_forward_24"
                android:layout_height="65dp"
                android:textSize="17sp"
                android:text="우회전"/>
            <Button
                android:id="@+id/btn_backward"
                style="@style/moveControlButtonStyle"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:drawableBottom="@drawable/baseline_arrow_downward_24"
                android:layout_height="65dp"
                android:textSize="17sp"
                android:text="후진"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>