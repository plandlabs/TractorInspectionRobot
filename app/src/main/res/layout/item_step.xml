<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/step_bg"
        style="@style/controlRecyclerStepBox"
        android:backgroundTint="#aaa">
        <TextView
            android:id="@+id/step_num"
            style="@style/controlStepTitleText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="STEP1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/step_num">
            <TextView
                android:id="@+id/subject"
                style="@style/controlStepValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="상부 상승(MAX)"/>
        </LinearLayout>
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_angle"
            android:background="@drawable/rounded"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="각도 설정"/>
    </RelativeLayout>
</LinearLayout>