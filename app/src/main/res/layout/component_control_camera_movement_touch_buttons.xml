<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/dataBox"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/dataBox"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    style="@style/tabTopTitle"
                    android:text="카메라 앵글 이동"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_x_up"
                    style="@style/moveControlButtonStyle"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/baseline_arrow_upward_24"
                    android:layout_height="65dp"
                    android:textSize="17sp"
                    android:text="+x'"/>
                <Button
                    android:id="@+id/btn_x_down"
                    style="@style/moveControlButtonStyle"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:drawableBottom="@drawable/baseline_arrow_downward_24"
                    android:layout_height="65dp"
                    android:textSize="17sp"
                    android:text="-x'"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_y_up"
                    style="@style/moveControlButtonStyle"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/baseline_arrow_upward_24"
                    android:layout_height="65dp"
                    android:textSize="17sp"
                    android:text="+y'"/>
                <Button
                    android:id="@+id/btn_y_down"
                    style="@style/moveControlButtonStyle"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:drawableBottom="@drawable/baseline_arrow_downward_24"
                    android:layout_height="65dp"
                    android:textSize="17sp"
                    android:text="-y'"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_forward"
                    style="@style/moveControlButtonStyle"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/baseline_refresh_24"
                    android:layout_height="65dp"
                    android:textSize="17sp"
                    android:text="+z'"/>

                <Button
                    android:id="@+id/btn_backward"
                    style="@style/moveControlButtonStyle"
                    android:layout_width="123dp"
                    android:layout_height="58dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="10dp"
                    android:drawableBottom="@drawable/baseline_refresh_24_mirror"
                    android:text="-z'"
                    android:textSize="17sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>