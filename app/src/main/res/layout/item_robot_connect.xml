<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">
    <RelativeLayout
        android:id="@+id/viewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/viewChildItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20sp">
                    <ImageView
                        android:id="@+id/imgView"
                        android:layout_width="76dp"
                        android:layout_height="100dp"
                        android:background="@drawable/robot1"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"/>
                    <ImageView
                        android:id="@+id/emptyView"
                        android:background="@drawable/outline_robot_2_24"
                        android:backgroundTint="#888"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">
                    <RelativeLayout
                        android:id="@+id/isConnected"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="35sp"
                            android:layout_height="35sp"
                            android:layout_marginLeft="0dp"
                            android:background="@drawable/outline_wifi_24"
                            android:backgroundTint="@color/teal_700"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35sp"
                            android:text="현재 연결중입니다."
                            android:textSize="18sp"
                            android:textColor="@color/teal_700"
                            android:layout_marginLeft="38dp"
                            android:gravity="center"
                            android:paddingLeft="5dp"/>
                        <ImageView
                            android:id="@+id/isNotNetworkConnected"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:background="@drawable/baseline_close_24"
                            android:backgroundTint="@color/teal_700"
                            android:layout_marginLeft="22sp"
                            android:layout_marginTop="17sp"
                            android:adjustViewBounds="true"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:id="@+id/deleteBtn"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:background="@drawable/baseline_delete_24"
                        android:adjustViewBounds="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/background"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:text="mqtt://"/>
                    <TextView
                        android:id="@+id/ip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/background"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:text="192.168.0.201"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/background"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:text=":"/>
                    <TextView
                        android:id="@+id/port"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/background"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:text="1883"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_state_03"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:text="192.168.0.201:1883"/>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressCircle"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/addViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_add_stroke"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="55dp"
        android:paddingBottom="55dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_add_circle_outline_24"
                android:backgroundTint="@color/text_color_smaller"
                android:width="70dp"
                android:height="70dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_smaller"
                android:text="@string/add_robot"
                android:textSize="21sp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>