<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/dataBox"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:columnCount="3">
            <Button
                android:id="@+id/btn_speed_up"
                style="@style/moveControlJoyButtonStyle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/baseline_keyboard_double_arrow_up_24"
                android:text="속도증가"/>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_stroke"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/dis_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="110"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="m/s"
                    android:textStyle="italic"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btn_speed_down"
                style="@style/moveControlJoyButtonStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/baseline_keyboard_double_arrow_down_24"
                android:text="속도감속"/>
        </RelativeLayout>
        <GridLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">
            <Button
                style="@style/controlWorkButtonStyle"
                android:id="@+id/btn_speed_low"
                android:layout_height="45dp"
                android:textSize="16sp"
                android:text="최저 속도"/>
            <Button
                style="@style/controlWorkButtonStyle"
                android:id="@+id/btn_speed_middle"
                android:layout_height="45dp"
                android:textSize="16sp"
                android:text="중간 속도"/>
            <Button
                style="@style/controlWorkButtonStyle"
                android:id="@+id/btn_speed_high"
                android:layout_height="45dp"
                android:textSize="16sp"
                android:text="최고 속도"/>
        </GridLayout>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4">
        <LinearLayout
            style="@style/controlBox"
            android:layout_columnWeight="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                style="@style/controlTitleText"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상부프레임 각도"/>
            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_stroke"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/top_frame_angle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="65.25"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=" ˚"
                    android:textStyle="italic"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            style="@style/controlWorkButtonStyle"
            android:id="@+id/btn_angle_zero"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="각도 영점"/>
    </GridLayout>
</LinearLayout>